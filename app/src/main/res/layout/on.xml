<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#5A2CCF"
            android:padding="20dp"
            android:layout_marginTop="50dp"
            >

            <TextView
                android:id="@+id/addList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter Name List :"
                android:textColor="#FFFF"
                android:textSize="20dp"

                />

            <EditText
                android:id="@+id/editText_listName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/addList"
                android:layout_centerHorizontal="true"
                android:background="#6C49D1"
                android:hint="Name List "
                android:padding="18dp"
                android:textColor="#FFFF"
                android:textColorHint="@color/white"
                android:alpha="0.5"
                android:layout_marginTop="30dp"
                />

            <Button
                android:id="@+id/saveList"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editText_listName"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/button"
                android:text="Done"
                android:textColor="#FFFFFF"

                />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>